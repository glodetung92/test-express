extends ../layouts/common.pug

block content  
    h1 
        span.mr-3 Users
        a.btn.btn-primary(href="/users/create") New

    .d-flex.align-items-center
        form.ml-auto(action="/users/search" method="GET" class="d-flex")
            input(type="text" class="form-control" name="q" value=name)
            button(class="btn btn-success") Search


    table.table
        tr
            th Name
            th Phone
            th


        each val in users
            tr
                td= val.name
                td= val.phone
                td
                    a.btn.btn-light(href='/users/'+val.id) View